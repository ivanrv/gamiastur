<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">temporal</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/gamitour</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="hibernate.jdbc.use_get_generated_keys">true</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">50</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        <mapping class="com.gamitour.modelo.Itinerario"/>
        <mapping class="com.gamitour.modelo.Voto"/>
        <mapping class="com.gamitour.modelo.Cliente"/>
        <mapping class="com.gamitour.modelo.Multimedia"/>
        <mapping class="com.gamitour.modelo.Comentario"/>
        <mapping class="com.gamitour.modelo.Premio"/>
        <mapping class="com.gamitour.modelo.Pruebacultural"/>
        <mapping class="com.gamitour.modelo.Noticia"/>
        <mapping class="com.gamitour.modelo.Actividad"/>
        <mapping class="com.gamitour.modelo.Pruebadeportiva"/>
        <mapping class="com.gamitour.modelo.Imagenactividad"/>
        <mapping class="com.gamitour.modelo.Parada"/>
        <mapping class="com.gamitour.modelo.Rol"/>
        <mapping class="com.gamitour.modelo.ClienteHasActividad"/>
    </session-factory>
</hibernate-configuration>
